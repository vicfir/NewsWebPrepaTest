{% extends 'base.html.twig' %}

{% block title %}NewsWeb | Admin {% endblock %}

{% block meta %}{{ parent() }}
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="css/sb-admin-2.css" />
    <link rel="stylesheet" href="css/sb-admin-2.min.css" type="text/css" media="screen" />
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
{% endblock %}

{% block body %}
    <div id="wrapper">
        {# On va créer les différentes zones modifiables du template dans le bloc body #}
        {% block sidebar %}{% endblock %}
        {% block topbar %}{% endblock %}
    </div>
{% endblock %}

{% block javascripts %}
    <!-- Bootstrap core JavaScript-->
    <script src="js/jquery/jquery.min.js"></script>
    <script src="js/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="js/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
{% endblock %}

